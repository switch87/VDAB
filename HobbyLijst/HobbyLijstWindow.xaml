<Window x:Class="HobbyLijst.HobbyLijstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HobbyLijst" Height="400" Width="525" Loaded="Window_loaded">
    <StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <Label>Categorie :</Label>
            <ComboBox Name="ComboBoxCategorie" Width="200" HorizontalAlignment="Left" SelectionChanged="ComboBoxCategorie_SelectionChanged"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 20">
            <ListBox Name="ListBoxHobbies" Height="100" Width="300" Margin="10 0" DisplayMemberPath="Activiteit"></ListBox>
            <Button Name="ButtonKies" Width="150" Height="20" VerticalAlignment="Top" Margin="10" >kies</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 10">
            <ListBox Name="ListBoxGekozen" Height="100" Width="300" Margin="10 0"></ListBox>
            <Button Name="ButtonVerwijderen" Height="20" Width="150" VerticalAlignment="Top" Margin="10">Verwijderen</Button>
        </StackPanel>
    </StackPanel>
</Window>
