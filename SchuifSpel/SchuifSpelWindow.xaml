<Window x:Class="SchuifSpel.SchuifSpelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SchuifspelWindow" Height="575" Width="416" Loaded="Window_Loaded">
    <StackPanel Height="515">
        <Grid Name="puzzelGrid" FlowDirection="LeftToRight">
            <Grid.RowDefinitions>
                <RowDefinition Name="rij1" Height="100"></RowDefinition>
                <RowDefinition Name="rij2" Height="100"></RowDefinition>
                <RowDefinition Name="rij3" Height="100"></RowDefinition>
                <RowDefinition Name="rij4" Height="100"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Name="kolom1" Width="100"></ColumnDefinition>
                <ColumnDefinition Name="kolom2" Width="100"></ColumnDefinition>
                <ColumnDefinition Name="kolom3" Width="100"></ColumnDefinition>
                <ColumnDefinition Name="kolom4" Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        </Grid>
        <Button Name="ShuffleButton" Content="Shuffle" Margin="10,20" Click="ShuffleButton_Click"></Button>
        <Button Name="OplossingButton" Content="Oplossing" Margin="10" Click="OplossingButton_Click"></Button>
    </StackPanel>
</Window>
