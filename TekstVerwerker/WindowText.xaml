<Window x:Class="WindowText.WindowText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Werken met tekst" Height="400" Width="525">
    <StackPanel Margin="25">
        <TextBlock TextAlignment="Center"
                   Background="Aqua"
                   Foreground="Blue"
                   FontSize="24"
                   TextWrapping="Wrap"
                   ToolTip="Voorbeeldtekst">
            Dit is een <Italic>voorbeeld</Italic> van <LineBreak /> het <Bold>gebruik</Bold> van <Underline>WERKEN MET</Underline> <Span Background="Yellow" FontSize="42">TEKST</Span>
        </TextBlock>
    </StackPanel>
</Window>
