@model ICollection<Microsoft.AspNet.Identity.EntityFramework.IdentityUserRole>
@{
    ViewBag.Title = "UserDetail";
}

<h2>UserDetail <i>@ViewBag.username</i></h2>
<h3>Roles :</h3>

@if (Model.Count != 0)
{
    <table class="zebra">
        <thead>
        `
        <tr>
            <th>Id</th>
            <th>Delete role for user</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var userrole in Model)
        {
            <tr>
                <td>@userrole.RoleId</td>
                <td align="center">
                    <a href="/User/VerwijderRoleForMember?userid=@userrole.UserId&roleid=@userrole.RoleId">
                        <img src="~/Images/delete.png" alt="verwijderen"/>
                    </a>
                </td>
            </tr>
        }
        </tbody>

    </table>
}
else
{
    <p>User @ViewBag.username behoort tot geen enkele rol</p>
}
<a href="/User/Userbeheer">Terug naar userbeheer</a>