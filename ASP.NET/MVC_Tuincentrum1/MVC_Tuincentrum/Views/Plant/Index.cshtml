@model IEnumerable<MVC_Tuincentrum.Models.Plant>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <a href="@Url.RouteUrl("AllePlanten")">Alle planten</a>
    <a href="@Url.RouteUrl("PlantenVanEenLeverancier", new {levnr = 3})">plantenlijst</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kleur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VerkoopPrijs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Leveranciers.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soorten.Naam)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kleur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VerkoopPrijs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leveranciers.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soorten.Naam)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.PlantNr}) |
                @Html.ActionLink("Details", "Details", new {id = item.PlantNr}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.PlantNr})
                @Html.ActionLink("Foto uploaden", "Uploaden", new {id = item.PlantNr})
            </td>
        </tr>
    }

</table>