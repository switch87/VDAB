<Window x:Class="Telefoon.TelefoonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_loaded">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="15">
            <ComboBox Name="ComboboxCategorie" Width="300" SelectionChanged="ComboBoxCategorie_SelectionChanged"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="15">
            <ListBox Name="ListBoxContacten" Width="300" Height="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Path=Foto}" Stretch="Fill" Height="40" Width="40"></Image>
                                <TextBlock Text="{Binding Path=Naam}"></TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Margin="45 30" VerticalAlignment="Top" Height="100" Width="100" Click="Button_Click"> 
                <StackPanel>
                    <Image Source="images\telefoon2.jpg"></Image>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
