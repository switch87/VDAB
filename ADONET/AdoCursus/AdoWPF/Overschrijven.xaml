<Window x:Class="AdoWPF.Overschrijven"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overschrijven" Height="300" Width="300">
    <Grid>
        <Label Content="Van Rekening Nr.:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Naar Rekening Nr.:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Bedrag:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox Name="textBoxVanRekNr" HorizontalAlignment="Left" Height="23" Margin="153,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="textBoxNaarRekNr" HorizontalAlignment="Left" Height="23" Margin="153,43,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Name="textBoxBedrag" HorizontalAlignment="Left" Height="23" Margin="153,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="buttonOverschrijven" Content="Overschrijven" HorizontalAlignment="Left" Margin="153,117,0,0" VerticalAlignment="Top" Width="120" Click="buttonOverschrijven_Click"/>
        <Label Name="labelStatus" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Width="272" Height="30"/>

    </Grid>
</Window>
